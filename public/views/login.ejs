<%
    // EJS Data Setup: This data MUST be passed from the server.
    const message = data.message || '';
    const errors = data.errors || [];
    
    // Demo Credentials (Define here or pass from server/config)
    const demoCredentials = [
        { role: "Home Owner", email: "owner@demo.com", pass: "demo123" },
        { role: "Society Manager", email: "manager@demo.com", pass: "demo123" },
        { role: "Administrator", email: "admin@demo.com", pass: "demo123" }
    ];
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WaterMind Predictor - Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        /* --- Clean Card Theme Variables --- */
        :root {
            --primary-blue: #007bff;
            --gradient-start: #007bff;
            --gradient-end: #00c6ff;
            --bg-light: #f0f4f8;
            --card-bg: #ffffff;
            --text-dark: #333;
            --text-muted: #6c757d;
        }
        
        /* Body and Background (Subtle Blue Tint) */
        body {
            background: linear-gradient(135deg, var(--bg-light) 0%, #dce4f0 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: var(--text-dark);
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }
        
        /* Main Login Card */
        .login-card {
            max-width: 420px;
            width: 90%;
            padding: 40px;
            border-radius: 20px;
            background-color: var(--card-bg);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            z-index: 10;
            animation: fadeIn 0.7s ease-out;
        }

        /* Header Logo and Text */
        .header-section {
            text-align: center;
            margin-bottom: 30px;
        }
        .water-icon {
            font-size: 3.5rem;
            color: var(--primary-blue);
            /* Creating the smooth, gradient circle look */
            background-color: var(--primary-blue);
            color: white;
            padding: 15px;
            border-radius: 50%;
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
            margin-bottom: 10px;
        }
        .app-name {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 5px;
        }
        .app-slogan {
            font-size: 0.9rem;
            color: var(--text-muted);
        }

        /* Form Controls */
        .form-control {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            border-color: #ddd;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }
        .form-label {
            font-weight: 500;
            color: var(--text-dark);
            margin-bottom: 0.2rem;
            font-size: 0.95rem;
        }

        /* Sign In Button (Gradient) */
        .btn-primary {
            background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
            border: none;
            padding: 0.75rem 1rem;
            font-weight: 600;
            border-radius: 10px;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 123, 255, 0.4);
        }

        /* Demo Credentials Section */
        .demo-box {
            background-color: #f8f9fa; /* Light grey background */
            border-radius: 10px;
            padding: 15px;
            margin-top: 25px;
            border: 1px solid #e9ecef;
        }
        .demo-box ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .demo-box li {
            font-size: 0.9rem;
            line-height: 1.8;
        }
        
        /* Error List Styling */
        .error-list {
            list-style: none;
            padding: 0;
            margin-top: 15px;
            color: #dc3545;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>

    <div class="login-card">
        
        <div class="header-section">
            <i class="fas fa-tint water-icon"></i>
            <h1 class="app-name">WaterMind Predictor</h1>
            <p class="app-slogan">Intelligent Water Management System</p>
        </div>

        <div class="mb-4">
            <h4 class="fw-normal">Welcome Back</h4>
            <p class="text-muted small">Sign in to access your water management dashboard</p>
        </div>

        <% if (message) { %>
            <div class="alert alert-danger text-center alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <% if (errors.length > 0) { %>
            <ul class="error-list">
                <% errors.forEach(error => { %>
                    <li><i class="fas fa-exclamation-triangle me-1"></i> <%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>

        <form method="POST" action="/login"> 
            
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required autofocus>
            </div>

            <div class="mb-4">
                <div class="d-flex justify-content-between">
                    <label for="password" class="form-label">Password</label>
                    <a href="/forgot-password" class="small text-decoration-none">Forgot password?</a>
                </div>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                    <span class="input-group-text bg-white" style="border-left: none; border-color: #ddd;">
                        <i class="fas fa-eye-slash text-muted"></i>
                    </span>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    Sign In
                </button>
            </div>
        </form>
        
        <div class="demo-box">
            <h6 class="text-primary fw-bold small">Demo Credentials:</h6>
            <ul>
                <% demoCredentials.forEach(cred => { %>
                    <li>
                        <span class="fw-bold text-primary">â€¢ <%= cred.role %>:</span> 
                        <span class="text-dark"><%= cred.email %></span> / <%= cred.pass %>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>