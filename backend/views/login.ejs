<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - HydroForecast</title>
  <style>
    :root {
      --primary-blue: #007aff;
      --primary-blue-dark: #0056b3;
      --light-blue-bg: #e0f7fa;
      --white-bg: #f0f8ff;
      --calm-blue: #cbefff;
      --glass-bg: rgba(255, 255, 255, 0.25);
      --glass-border: rgba(255, 255, 255, 0.5);
      --text-dark: #222;
      --text-light: #555;
      --error-red: #c62828;
      --error-bg: #ffebee;
      --border-radius-card: 16px;
      --border-radius-btn: 10px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      height: 100%;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica,
        Arial, sans-serif;
      /* 1. Minimal gradient background with subtle animation */
      background: linear-gradient(
        -45deg,
        var(--light-blue-bg),
        var(--white-bg),
        var(--calm-blue),
        var(--light-blue-bg)
      );
      background-size: 400% 400%;
      animation: moveGradient 15s ease infinite;
      height: 100%;
      color: var(--text-dark);
    }

    @keyframes moveGradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    /* 2. Center the form */
    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 2rem;
    }

    /* 2. Rounded glass-like container */
    .auth-card {
      width: 100%;
      max-width: 420px;
      padding: 2.5rem;
      background: var(--glass-bg);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid var(--glass-border);
      border-radius: var(--border-radius-card);
      box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .header {
      margin-bottom: 1rem;
    }
    .header h1 {
      color: var(--primary-blue-dark);
      font-weight: 700;
      letter-spacing: -0.5px;
      margin-bottom: 0.25rem;
    }
    .header p {
      font-size: 1rem;
      color: var(--text-light);
    }

    .auth-card h2 {
      font-size: 1.75rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: var(--text-dark);
    }

    .form-group {
      margin-bottom: 1.25rem;
      text-align: left;
    }
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--text-light);
    }
    
    /* 3. Smooth input field transitions */
    .form-group input {
      width: 100%;
      padding: 0.85rem 1rem;
      font-size: 1rem;
      border: 1px solid rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.5);
      transition: all 0.3s ease;
    }

    /* 2. Soft glow on focus */
    .form-group input:focus {
      outline: none;
      background: #fff;
      border-color: var(--primary-blue);
      box-shadow: 0 0 0 4px rgba(0, 122, 255, 0.15);
    }

    .error-message {
      background: var(--error-bg);
      color: var(--error-red);
      padding: 0.75rem;
      border-radius: 8px;
      margin-bottom: 1.25rem;
      font-size: 0.9rem;
      font-weight: 500;
      text-align: center;
    }

    /* 4. "Sign In" button hover effect */
    .btn-primary {
      width: 100%;
      padding: 0.9rem;
      border: none;
      border-radius: var(--border-radius-btn);
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      background-color: var(--primary-blue);
      color: white;
      transition: all 0.25s ease-out;
    }

    .btn-primary:hover {
      /* Color shift */
      background-color: var(--primary-blue-dark);
      /* Scale */
      transform: scale(1.03);
      box-shadow: 0 6px 20px rgba(0, 122, 255, 0.25);
    }
    
    .btn-primary:active {
      transform: scale(1);
      box-shadow: none;
    }

    .switch-auth {
      margin-top: 1.5rem;
      font-size: 0.95rem;
      color: var(--text-light);
    }
    .switch-auth a {
      color: var(--primary-blue);
      font-weight: 600;
      text-decoration: none;
    }
    .switch-auth a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="auth-card">
      <div class="header">
        <h1>ðŸ’§ HydroForecast</h1>
        <p>Water Tank Monitoring & Prediction</p>
      </div>

      <h2>Login</h2>

      <div id="error-message" class="error-message" style="display: none;"></div>

      <form id="login-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
      </form>

      <p class="switch-auth">
        Don't have an account? <a href="/signup">Sign up here</a>
      </p>
    </div>
  </div>

  <script>
    document
      .getElementById('login-form')
      .addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const errorDiv = document.getElementById('error-message');

        try {
          const response = await fetch('/api/auth/login', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email, password }),
          });

          const data = await response.json();

          if (response.ok) {
            window.location.href = '/dashboard';
          } else {
            errorDiv.textContent = data.message || 'Login failed';
            errorDiv.style.display = 'block';
          }
        } catch (error) {
          errorDiv.textContent = 'An error occurred. Please try again.';
          errorDiv.style.display = 'block';
          console.error('Login error:', error);
        }
      });
  </script>
</body>
</html>